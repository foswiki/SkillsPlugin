<!-- SKILLSPLUGIN - SEARCH SKILLS
%TMPL:INCLUDE{"skills"}%

%TMPL:DEF{"search-subcategory-tr"}%<tr>
   <th class="skillsplugin_category">Subcategory</th>
   <td>
    <select name="path2" class="skillsCategorySelect" id="search-subcategory-select">
    </select>
   </td>
</tr>%TMPL:END%

-->
<form name="search-skill-form" id="search-skill-form">
 <table class="skillsForm">
  <tr>
   <th colspan="4">
    <a href="%SCRIPTURL{view}%/%SYSTEMWEB%/SkillsPlugin">Search Skills</a>
   </th>
  </tr>
  <tr>
   <th class="skillsplugin_category">Category</th>
   <td>
    <select name="path1" class="skillsCategorySelect" id="search-category-select">
    </select>
   </td>
  </tr>
  %TMPL:P{context="skillsplugin_subcategories" then="search-subcategory-tr"}%
  <tr>
   <th class="skillsplugin_skill">Skill</th>
   <td><select name="path3" id="search-skill-select"></select></td>
  </tr>
  <tr>
   <th>Rating</th>
   <td colspan="3">
    Between
    <select name="ratingFrom">
     %SKILLRATINGS{format="<option value='$value' $marker>$name</option>" selection="1"}%
    </select>
    and
    <select name="ratingTo">
     %SKILLRATINGS{format="<option value='$value' $marker>$name</option>" selection="$"}%
    </select>
   </td>
  </tr>
  <tr>
   <td colspan="6" class="skillsFormRating">
    <input name="skill-submit" id="search-skill-submit" type="button" value="Search" class="foswikiSubmit skillsSubmit skillsControl" />
   </td>
  </tr>
 </table>
</form>
